<div class="container text-center">
  <h1>BeerTabs#show</h1>

  <p><%= link_to @beer_tab.beer.name, beer_path(@beer_tab.beer) %></p>
  <p>Rating: <%= @beer_tab.rating.zero? ? '💩' : '⭐️' * @beer_tab.rating %></p>
  <p>Notes: <%= @beer_tab.content %></p>
  
  <%= link_to "Retour à #{@beer_tab.beer.name}", beer_path(@beer_tab.beer), class: 'btn btn-secondary btn-sm' %>
</div>
