<div class="container text-center d-flex flex-column align-items-center">
  <h1>TempBeers#new</h1>
  <p>Find me in app/views/temp_beers/new.html.erb</p>

  <div class="my-container">
    <%= simple_form_for(@temp_beer) do |f| %>

      <%= f.input :name %>
      <%= f.input :brewery_name,
        collection: @brewery_names,
        input_html: { class: 'select2-breweries' },
        label: false
      %>
      <%= f.input :photo, as: :file %>
      <%= f.input :upc, value: params[:upc] %>

      <%= f.submit %>
    <% end %>
    <%= link_to 'Annuler', beers_path, class: 'btn btn-secondary' %>
  </div>
</div>
